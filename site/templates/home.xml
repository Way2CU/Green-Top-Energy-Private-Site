<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<header>

				<h1><cms:text constant="header"/></h1>
				<span><cms:text constant="header_desc"/></span>
				<a href="#"></a>

				<div class="menu">

					<span class="logo"></span>

					<cms:module
						name="contact_form"
						action="show"
						text_id="contact_form"
					/>

					<a
						href="'tel:'.urlencode(Language::getText('phone'))"
						cms:eval="href"
						class="phone"
						>
						<cms:text constant="phone"/>
					</a>

				</div>

					<cms:module
						name="youtube"
						action="show"
						text_id="green_top"
						width="20000"
						height="900"
						embed="1"
						target="video_player"
						theme="dark"
						controls="0"
						autohide="1"
						autoplay="1"
						loop="1"
						/>


			</header>

			<div class="wrap gradient">
				<div class="form_wrap">
					<h2><cms:text constant="form_title"/></h2>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact_form"
					/>
				</div>

				<cms:module
					name="articles"
					action="show"
					text_id="about_article"
					template="parts/article.xml"
				/>

				<a href="">
					<cms:text constant="btn"/>
				</a>

			</div>

			<!-- System Section -->
			<div class="wrap white">
				<cms:module
					name="articles"
					action="show"
					text_id="system_article"
					template="parts/article.xml"
				/>
			</div>

			<!-- Product -->
			<div class="wrap">

				<div>
					<span></span>
					<span><cms:text constant="product"/></span>
				</div>

				<cms:module
					name="articles"
					action="show"
					text_id="gauge_article"
					template="parts/article.xml"
				/>
			</div>

			<!-- Gallery -->
			<div class="clients wrap">

				<cms:module
					name="gallery"
					action="show_group_list"
					container="customers"
					template="parts/groups.xml"
					/>

			</div>

			<!-- system features -->
			<div class="system_feature wrap">

				<h2><cms:text constant="system_feature_title"/></h2>

				<div class="articles">
					<cms:module
						name="articles"
						action="show_group"
						text_id="feature_articles"
						template="parts/show_articles.xml"

					/>
				</div>
				<div class="bottom">

					<cms:module
						name="articles"
						action="show"
						text_id="feature4"
						template="parts/article.xml"

					/>

				</div>

			</div>

			<!-- Deals Section -->
			<div class="deals wrap">

				<h2><cms:text constant="deals_title"/></h2>
				<cms:module
						name="articles"
						action="show"
						text_id="green_deal"
						template="parts/article.xml"

					/>

				<cms:module
						name="articles"
						action="show"
						text_id="gold_deal"
						template="parts/article.xml"

					/>

				<cms:module
						name="articles"
						action="show"
						text_id="extra_deal"
						template="parts/article.xml"

					/>

			</div>

			<div class="wrap blue">
				<span><cms:text constant="header"/></span>
				<span><cms:text constant="header_desc"/></span>
			</div>

			<!-- footer Section -->
			<footer>
				<span><cms:text constant="copyright"/></span>
			</footer>

		</body>
	</html>
</document>
