<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<header>

				<h1><cms:text constant="header"/></h1>
				<span><cms:text constant="header_desc"/></span>
				<a href="#"></a>

				<div class="menu">

					<span class="logo"></span>

					<cms:module
						name="contact_form"
						action="show"
						text_id="contact_form"
					/>

					<a
						href="'tel:'.urlencode(Language::getText('phone'))"
						cms:eval="href"
						class="phone"
						>
						<cms:text constant="phone"/>
					</a>

				</div>

					<cms:module
						name="youtube"
						action="show"
						text_id="green_top"
						width="20000"
						height="900"
						embed="1"
						target="video_player"
						theme="dark"
						controls="0"
						autohide="1"
						autoplay="1"
						loop="1"
						/>


			</header>

			<div class="wrap gradient">
				<div class="form_wrap">
					<h2><cms:text constant="form_title"/></h2>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact_form"
					/>
				</div>

				<cms:module
					name="articles"
					action="show"
					text_id="about_article"
					template="parts/article.xml"
				/>

				<a href="">
					<cms:text constant="btn"/>
				</a>

			</div>
			<!-- System Section -->
			<div class="wrap white">
				<cms:module
					name="articles"
					action="show"
					text_id="system_article"
					template="parts/article.xml"
				/>
			</div>

			<!--  -->

			<div class="wrap">
				<cms:module
					name="articles"
					action="show"
					text_id="gauge_article"
					template="parts/article.xml"
				/>
			</div>



		</body>
	</html>
</document>
