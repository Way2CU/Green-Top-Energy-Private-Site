<document>
	<cms:desktop>
				<a
					class="youtube"
					href="url_Make('view', 'dialog_video', array('id', $params['id']))"
					title="$params['title'][$language]"
					cms:eval="href,title"
					>
					<cms:text constant="btn"/>
				</a>
	</cms:desktop>
	<cms:mobile>
				<a
					class="youtube mobile"
					href="'http://www.youtube.com/watch?v='.$params['video_id']"
					title="$params['title'][$language]"
					cms:eval="href,title"
					>
				<cms:text constant="btn"/>
				</a>
	</cms:mobile>
</document>